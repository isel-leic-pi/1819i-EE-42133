<div>
    <h4>League Teams:</h4>
</div>
<div class="container mt-3">
    <div class="row">
        <div class="card-deck">
            {{#each this}}
            <div class="card mb-4" style="min-width: 18rem; max-width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">{{name}}</h5>
                    <!--
                    <p class="card-text">{{id}}</p>
                    -->
                </div>
                <div class="card-footer text-right">
                    <button type="button text-right" class="btn btn-primary" role="button" id="addTeamToGroupButton{{id}}">
                        Add Team
                    </button>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>